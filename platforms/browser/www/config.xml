<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <name>EZDrive</name>
    <description>The first online driving lessons co-ordinator</description>
    <icon src="/images/splash.png" />
    <gap:plugin name="phonegap-plugin-push" source="npm" spec="1.7.2">
        <param name="SENDER_ID" value="554906213045" />
    </gap:plugin>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <gap:splash gap:platform="ios" height="480" src="/images/splash.png" width="320" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="/images/splash.png" />
</widget>
